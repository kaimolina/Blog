<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Status</th>
    <th>Date posted</th>
    <th>Author</th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%=h article.title %></td>
    <td><%=h article.body %></td>
    <td><%=h article.status %></td>
    <td><%=h article.date_posted %></td>
    <td><%=h article.author_id %></td>
    <td class ="side"> &nbsp<%= link_to 'Show', article %></td>
    <td class ="side"> &nbsp<%= link_to 'Edit', edit_article_path(article) %></td>
    <td class ="side"> &nbsp<%= link_to 'Destroy', article, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<div class ="side">
<%= link_to 'New article', new_article_path %>
</div>