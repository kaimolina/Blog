<h1>New article</h1>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= select :article, :status, Article.statuses %>
  </p>
  <p>
    <%= f.label :date_posted %><br />
    <%= f.datetime_select :date_posted %>
  </p>
  <p>
    <%= f.label :author_id %><br />
    <%= collection_select(:article, :author_id, Author.all, :id, :full_name, :include_blank =>true) %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', articles_path %>