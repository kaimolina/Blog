<br />
<h2>Post Comment</h2>
<% form_for(:comment, :url => article_comments_path(article) ) do |f| %>
	<%= f.error_messages%>
	<p>
		<%= f.label :email %>: 	
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :body %><br /> 	
		<%= f.text_area :body %>
	</p>
	<%= f.submit "Post Comment" %>
<% end %>
